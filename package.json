{
  "private": true,
  "name": "livemicro",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "shop": "yarn workspace @livemicro/shop start",
    "store": "yarn workspace @livemicro/store start",
    "start": "concurrently --kill-others-on-fail \"yarn shop\"  \"yarn store\""
  },
  "dependencies": {
    "concurrently": "^4.1.2"
  }
}
